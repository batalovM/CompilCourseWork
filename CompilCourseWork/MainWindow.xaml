<Window x:Class="CompilCourseWork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CompilCourseWork"
        mc:Ignorable="d"
        Title="Курсовая работа Компиляторы" Height="450" Width="800">
    <DockPanel>
        <!-- Верхнее меню -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Click="MenuItem_New_Click" Header="Создать"/>
                <MenuItem Click="MenuItem_Open_Click" Header="Открыть"/>
                <MenuItem Click="MenuItem_Save_Click" Header="Сохранить"/>
                <MenuItem Click="MenuItem_SaveAs_Click" Header="Сохранить как"/>
                <MenuItem Click="MenuItem_Exit_Click" Header="Выход"/>
            </MenuItem>
            <MenuItem Header="Правка">
                <MenuItem Click="MenuItem_Undo_Click" Header="Отменить"/>
                <MenuItem Click="MenuItem_Redo_Click" Header="Повторить"/>
                <MenuItem Click="MenuItem_Cut_Click" Header="Вырезать"/>
                <MenuItem Click="MenuItem_Copy_Click" Header="Копировать"/>
                <MenuItem Click="MenuItem_Paste_Click" Header="Вставить"/>
                <MenuItem Click="MenuItem_Delete_Click" Header="Удалить"/>
                <MenuItem Click="MenuItem_SelectAll_Click" Header="Выделить все"/>
            </MenuItem>
            <MenuItem Header="Текст">
                <MenuItem Header="Постановка задачи"/>
                <MenuItem Header="Грамматика"/>
                <MenuItem Header="Классификация грамматики"/>
                <MenuItem Header="Метод анализа"/>
                <MenuItem Header="Диагностика и нейтрализация ошибок"/>
                <MenuItem Header="Тестовый пример"/>
                <MenuItem Header="Список литературы"/>
                <MenuItem Header="Исходный код программы"/>
            </MenuItem>
            <MenuItem Header="Пуск"/>
            <MenuItem Header="Справка">
                <MenuItem Click="MenuItem_Help_Click" Header="Вызов справки"/>
                <MenuItem Click="MenuItem_About_Click" Header="О программе"/>
            </MenuItem>
        </Menu>
        <!-- Панель с кнопками -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Left" Margin="5">
            <Button x:Name="Creation" Margin="5" Click="MenuItem_New_Click" Width="40" Height="40" Background="White">
                <Image Source="C:\Users\batal\Desktop\4 семак дерьмецо)\Моделирование\Лаба3\CompilCourseWork\CompilCourseWork\resources\create.png"></Image>
            </Button>
            <Button x:Name="Open" Margin="5" Click="MenuItem_Open_Click" Width="40" Height="40" Background="White">
                <Image Source="C:\Users\batal\Desktop\4 семак дерьмецо)\Моделирование\Лаба3\CompilCourseWork\CompilCourseWork\resources\open.png"></Image>
            </Button>
            <Button x:Name="Save" Click="MenuItem_Save_Click" Margin="5" Width="40" Height="40" Background="White">
                <Image Source="C:\Users\batal\Desktop\4 семак дерьмецо)\Моделирование\Лаба3\CompilCourseWork\CompilCourseWork\resources\save.png"></Image>
            </Button>
            <Button x:Name="Cancel" Margin="50, 5, 5, 5" Click="MenuItem_Undo_Click" Width="40" Height="40" Background="White">
                <Image Source="C:\Users\batal\Desktop\4 семак дерьмецо)\Моделирование\Лаба3\CompilCourseWork\CompilCourseWork\resources\cancel.png"></Image>
            </Button>
            <Button x:Name="Return" Margin="5" Click="MenuItem_Redo_Click" Width="40" Height="40" Background="White">
                <Image Source="C:\Users\batal\Desktop\4 семак дерьмецо)\Моделирование\Лаба3\CompilCourseWork\CompilCourseWork\resources\return.png"></Image>
            </Button>
            <Button x:Name="Copy" Margin="5" Click="MenuItem_Copy_Click" Width="40" Height="40" Background="White">
                <Image Source="C:\Users\batal\Desktop\4 семак дерьмецо)\Моделирование\Лаба3\CompilCourseWork\CompilCourseWork\resources\copy.png"></Image>
            </Button>
            <Button x:Name="Cut" Margin="5" Click="MenuItem_Cut_Click" Width="40" Height="40" Background="White">
                <Image Source="C:\Users\batal\Desktop\4 семак дерьмецо)\Моделирование\Лаба3\CompilCourseWork\CompilCourseWork\resources\cut.png"></Image>
            </Button>
            <Button x:Name="Paste" Margin="5" Click="MenuItem_Paste_Click" Width="40" Height="40" Background="White">
                <Image Source="C:\Users\batal\Desktop\4 семак дерьмецо)\Моделирование\Лаба3\CompilCourseWork\CompilCourseWork\resources\paste.png"></Image>
            </Button>
            <Button x:Name="Launch" Margin="5" Width="40" Height="40" Background="White">
                <Image Source="C:\Users\batal\Desktop\4 семак дерьмецо)\Моделирование\Лаба3\CompilCourseWork\CompilCourseWork\resources\play.png"></Image>
            </Button>
            <Button x:Name="Spravka" Margin="5" Click="MenuItem_Help_Click" Width="40" Height="40" Background="White">
                <Image Source="C:\Users\batal\Desktop\4 семак дерьмецо)\Моделирование\Лаба3\CompilCourseWork\CompilCourseWork\resources\spravka.png"></Image>
            </Button>
            <Button x:Name="Info" Margin="5" Click="MenuItem_About_Click" Width="40" Height="40" Background="White">
                <Image Source="C:\Users\batal\Desktop\4 семак дерьмецо)\Моделирование\Лаба3\CompilCourseWork\CompilCourseWork\resources\info.png"></Image>
            </Button>
        </StackPanel>
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <RichTextBox x:Name="InputFirst" Grid.Row="0" Margin="5" BorderBrush="Black" BorderThickness="1"/>
            <RichTextBox x:Name="InputSecond" Grid.Row="1" Margin="5" BorderBrush="Black" BorderThickness="1"/>
        </Grid>
    </DockPanel>
</Window>
